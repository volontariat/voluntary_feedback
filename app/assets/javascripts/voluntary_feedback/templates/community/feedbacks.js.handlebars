{{#if anyItems}}
<table class="table table-striped" style="margin-top:15px;">
  <tbody>
  {{#each model as |feedback|}}
    <tr>
      <td>{{feedback.feedbackType}}</td>
      <td>
        {{#link-to 'community.feedback' communitySlug feedback.slug 1}}{{feedback.name}}{{/link-to}}
      </td>
      <td>
        {{#link-to 'community.edit_feedback' communitySlug feedback.slug class='edit_feedback_link'}}
          <span class="glyphicon glyphicon-pencil"></span> {{t 'general.edit'}}
        {{/link-to}}
         | 
        <a {{action 'destroy' feedback.slug}} class="remove_feedback_link">
          <span class="glyphicon glyphicon-remove"></span> {{t 'general.remove'}}
        </a>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
{{else}}
<p>
  {{t 'feedbacks.index.empty_collection'}}
</p>
{{/if}}

